{% comment %} Lookbook Block - Can be added to any section {% endcomment %}
{% liquid
  assign block_settings = block.settings
  assign image_1 = block_settings.image_1
  assign image_2 = block_settings.image_2
  assign title_1 = block_settings.title_1
  assign title_2 = block_settings.title_2
  assign has_two_images = false
  
  if image_1 != blank and image_2 != blank
    assign has_two_images = true
  endif
%}

<div
  class="lookbook-block__container{% if has_two_images %} lookbook-block__container--two-items{% endif %}"
  style="--gap: {{ block_settings.gap }}px;"
  {{ block.shopify_attributes }}
>
  {% comment %} First image {% endcomment %}
  {% if image_1 != blank %}
    <div class="lookbook-block__item{% if has_two_images %} lookbook-block__item--half{% endif %}{% if block_settings.image_1_ratio == 'landscape' %} lookbook-block__item--landscape{% endif %}">
      <div class="lookbook-block__image-wrapper">
        {{
          image_1
          | image_url: width: 2000
          | image_tag:
            loading: 'lazy',
            widths: '375, 550, 750, 1100, 1500, 2000',
            sizes: has_two_images ? '(min-width: 750px) 50vw, 100vw' : '100vw',
            alt: image_1.alt | default: title_1,
            class: 'lookbook-block__image'
          }}
      </div>

      {% if title_1 != blank %}
        <div class="lookbook-block__title">
          <h2 class="lookbook-block__title-text">{{ title_1 }}</h2>
        </div>
      {% endif %}
    </div>
  {% endif %}

  {% comment %} Second image {% endcomment %}
  {% if image_2 != blank %}
    <div class="lookbook-block__item{% if has_two_images %} lookbook-block__item--half{% endif %}">
      <div class="lookbook-block__image-wrapper">
        {{
          image_2
          | image_url: width: 2000
          | image_tag:
            loading: 'lazy',
            widths: '375, 550, 750, 1100, 1500, 2000',
            sizes: has_two_images ? '(min-width: 750px) 50vw, 100vw' : '100vw',
            alt: image_2.alt | default: title_2,
            class: 'lookbook-block__image'
          }}
      </div>

      {% if title_2 != blank %}
        <div class="lookbook-block__title">
          <h2 class="lookbook-block__title-text">{{ title_2 }}</h2>
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>

{% stylesheet %}
  .lookbook-block__container {
    display: flex;
    flex-direction: column;
    gap: var(--gap, 16px);
    width: 100%;
  }

  .lookbook-block__item {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--padding-md, 16px);
  }

  .lookbook-block__image-wrapper {
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .lookbook-block__image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .lookbook-block__item--landscape .lookbook-block__image-wrapper {
    aspect-ratio: 16 / 9;
  }

  .lookbook-block__item:not(.lookbook-block__item--landscape) .lookbook-block__image-wrapper {
    aspect-ratio: 3 / 4;
  }

  .lookbook-block__title {
    width: 100%;
  }

  .lookbook-block__title-text {
    margin: 0;
    font-size: var(--font-size-h3, 1.5rem);
    font-weight: var(--font-weight-normal, 400);
    line-height: var(--line-height-normal, 1.5);
  }

  @media screen and (min-width: 750px) {
    .lookbook-block__container--two-items {
      flex-direction: row;
    }

    .lookbook-block__item--half {
      width: calc(50% - (var(--gap, 16px) / 2));
      flex: 0 0 calc(50% - (var(--gap, 16px) / 2));
    }

    .lookbook-block__item--landscape .lookbook-block__image-wrapper {
      aspect-ratio: 16 / 9;
    }

    .lookbook-block__item--half:not(.lookbook-block__item--landscape) .lookbook-block__image-wrapper {
      aspect-ratio: 3 / 4;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Lookbook",
  "settings": [
    {
      "type": "header",
      "content": "First Image"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1",
      "info": "Required"
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "Title 1",
      "info": "Optional title displayed below the first image"
    },
    {
      "type": "select",
      "id": "image_1_ratio",
      "label": "Image 1 ratio",
      "options": [
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "landscape",
          "label": "Landscape"
        }
      ],
      "default": "portrait"
    },
    {
      "type": "header",
      "content": "Second Image (Optional)"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2",
      "info": "Optional second image. If added, images will be displayed side by side on desktop."
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Title 2",
      "info": "Optional title displayed below the second image"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap between images",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 16,
      "info": "Only applies when two images are added"
    }
  ]
}
{% endschema %}

